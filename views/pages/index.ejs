<!DOCTYPE html>
  <head>
    <meta charset="UTF-8">
    <title>EJS Is Fun</title>
    <!-- CSS (load bootstrap from a CDN) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
      body { padding-top:50px; }
    </style>
  </head>
  <body class="container">

  <header>
    <%- include('../components/header'); %>
  </header>

  <main>
    <div class="jumbotron">
      <h3>Todo List</h3>
      <form method="POST" action="/add">
        <div class="form-group">
          <label for="inputTitle">Todo Title</label>
          <input type="text" class="form-control" id="inputTitle" name="title">
        </div>
        <div class="form-group">
          <label for="inputDescription">Description</label>
          <textarea class="form-control" id="inputDescription" name="description" rows="3"></textarea>
       </div>

        <div class="d-flex justify-content-around">
          <% tags.forEach(function(tag) { %>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="tag" id="<%= tag.id %>" value="<%= tag.id %>" checked>
                <label class="form-check-label" for="inputTag">
                  <%= tag.name %>
                </label>
              </div>
          <% }); %>
        </div>
       
       <button type="submit" class="btn btn-primary">Submit</button>
      </form>

      <div class="mt-4">
        <h3>Data Todo</h3>
        <ul class="list-group list-group-flush">
          <% todos.forEach(function(todo) { %>
           <li class="d-flex list-group-item justify-content-between">
            <span>
              <strong><%= todo.title %></strong>, <%= todo.description %>
            </span>
            <div class="d-flex">
              <a class="mr-2" href="/edit/<%= todo.id %>">Edit</a>
              <a class="text-danger" href="/delete/<%= todo.id %>">Delete</a></td>
            </div>
          </li>
          <% }); %>
        </ul>
      </div>
    </div>
  </main>

  <footer>
    <%- include('../components/footer'); %>
  </footer>

  </body>
</html>